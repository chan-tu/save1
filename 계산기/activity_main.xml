<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText"
    android:orientation="vertical"
    android:weightSum="100">
    //LinearLayout에서는 자신이 가지고 있는 뷰를 어떻게 배치할 것인지 정리한다
    //뷰를 정리하는 속성 값은 orientation
    //orientation에서 vertcal는 세로로 정렬, horizontal는 가로로 정렬
    //weightsum="100"는 100%이라는 의미

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="40sp"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:layout_margin="7dp"/>
        //textSize는 글자크기를 의미하며 단위는 'sp'
        //gravity는 정렬을 의미
        //center_vertical|righ는 우측으로 정렬하겠다는 의미
        //padding는 TextView안에서 표현되는 글씨를 좀더 안쪽으로 들어가겠다는 의미
        //TextView안에서 표현되는 글씨 정렬는 padding또는 layout_margin를 사용
        //Id는 View 객체를 코드에서 제어할때 사용하는 주객체를 구분자

    </LinearLayout>
        //match_parent는 꽉 채운다는 의미
        //layout_weigh="20"는 높이를 20%로 하겠다는 의미
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="100"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:id="@+id/all_clear_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="AC"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/clear_entry_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="CE"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/Back_space_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="BS"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/division_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="/"
                android:textSize="30sp"
                android:backgroundTint="#7E7EF8"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:id="@+id/num_7_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="7"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/num_8_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="8"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/num_9_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="9"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/Multi_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="x"
                android:textSize="30sp"
                android:backgroundTint="#7E7EF8"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:id="@+id/num_4_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="4"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/num_5_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="5"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/num_6_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="6"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="-"
                android:textSize="30sp"
                android:backgroundTint="#7E7EF8"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:id="@+id/num_1_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="1"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/num_2_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="2"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/num_3_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="3"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/Plus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="+"
                android:textSize="30sp"
                android:backgroundTint="#7E7EF8"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:id="@+id/num_0_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="0"
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />


            <Button
                android:id="@+id/decimal_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="."
                android:textSize="30sp"
                android:backgroundTint="#4C4A4C"
                />

            <Button
                android:id="@+id/ruslt_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="="
                android:textSize="30sp"
                android:backgroundTint="#7E7EF8"
                />

        </LinearLayout>

    </LinearLayout>
       //layout_weigh="80"는 높이를 80%로 하겠다는 의미

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

</LinearLayout>

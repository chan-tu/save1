package com.example.app

fun main() {
    var num1 = readLine()!!.toInt()
    //입력한 내용이 숫자로 바뀌어 num1에 저장
    var num2 = readLine()!!.toInt()
    //입력한 내용이 숫자로 바뀌어 num2에 저장

    // sum이라는 이름의 메소드를 호출!
    sum(num1, num2)
    //sum를 호출할때 num1과 num2를 호출
}
//더하는 코드 즉 sum를 메소드로
fun sum(num1:Int, num2:Int) {
    //외부에서 num1과 num2을 받음
    var result = num1 + num2
    //num1과 num2를 더한 값을 result에 저장하고 출력
    println("num1과 num2의 덧셈결과는 ${result}입니다.")
}
